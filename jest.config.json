{
    "globals": {
        "__DEV__": true
    },
    "setupFiles": [
        "<rootDir>/__tests__/shim.js",
        "<rootDir>/__tests__/setup.js"
    ],
    "testPathIgnorePatterns": [
        "<rootDir>/(fields|modals|packages|layouts|lists)/*/(lib|es|dist)/",
        "<rootDir>/packages/generator-panneau/lib/",
        "<rootDir>/packages/generator-panneau/src/templates/",
        "<rootDir>/packages/generator-panneau/src/generators/*",
        "<rootDir>/__tests__/shim.js",
        "<rootDir>/__tests__/setup.js",
        "<rootDir>/__tests__/storyshots.test.js"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/(fields|modals|packages|layouts|lists)/*/(lib|es|dist)/"
    ],
    "moduleNameMapper": {
        "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
        "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js",
        "^@panneau/fields": "<rootDir>/layouts/fields/src/index.js",
        "^@panneau/field-(.*)": "<rootDir>/fields/$1/src/index.js",
        "^@panneau/form-group": "<rootDir>/fields/form-group/src/index.js",
        "^@panneau/modal-(.*)": "<rootDir>/modals/$1/src/index.js",
        "^@panneau/layout-(.*)": "<rootDir>/layouts/$1/src/index.js",
        "^@panneau/list-(.*)": "<rootDir>/lists/$1/src/index.js",
        "^@panneau/list": "<rootDir>/lists/core/src/index.js",
        "^@panneau/lists": "<rootDir>/lists/lists/src/index.js",
        "^@panneau/layout": "<rootDir>/layouts/core/src/index.js",
        "^@panneau/layouts": "<rootDir>/layouts/layouts/src/index.js",
        "^@panneau/modalss": "<rootDir>/modalss/modalss/src/index.js",
        "^@panneau/core": "<rootDir>/packages/core/src/index.js",
        "^panneau$": "<rootDir>/packages/panneau/src/index.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "(fields|modals|packages|layouts|lists)/*/src/**/*.{js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**",
        "!**/templates/**",
        "!**/__tests__/**",
        "!**/__stories__/**"
    ]
}
