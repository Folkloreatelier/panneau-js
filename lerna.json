{
    "version": "1.0.0-alpha.10",
    "packages": [
        "fields/*",
        "forms/*",
        "modals/*",
        "elements/*",
        "filters/*",
        "lists/*",
        "indexes/*",
        "packages/*"
    ],
    "command": {
        "publish": {
            "allowBranch": [
                "master",
                "v0.8"
            ]
        },
        "bootstrap": {
            "hoist": true
        }
    },
    "bootstrap": {
        "npmClientArgs": [
            "--no-package-lock"
        ]
    }
}
