{
    "version": "0.8.0",
    "packages": [
        "fields/*",
        "forms/*",
        "modals/*",
        "elements/*",
        "filters/*",
        "lists/*",
        "packages/*"
    ],
    "command": {
        "publish": {
            "allowBranch": ["master", "0.8"]
        },
        "bootstrap": {
            "hoist": true
        }
    },
    "bootstrap": {
        "npmClientArgs": ["--no-package-lock"]
    }
}
